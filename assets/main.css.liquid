{% comment %} ------ GENERALS ------ {% endcomment %}
body {font-family: {{ settings.type_base_font.family }}, Arial, sans-serif;}
h1,h2,h3,h4,h5,h6 {font-family: {{ settings.type_header_font.family }}, Arial, sans-serif;}

.arrow-after:after {content: url('{{ 'icon-arrow.svg' | asset_url }}')}

.btn-slider-left-revs::before {
  content: url("{{ 'icon-arrow-white.svg' | asset_url }}");
  transform: rotateZ(180deg);
}

.btn-slider-rigth-revs::before, .container_arrow::before {
  content: url("{{ 'icon-arrow-white.svg' | asset_url }}");
}

.select_arrow-s {
  background-image: url("{{ 'icon-arrow.svg' | asset_url }}");
  background-position: 95% 55%;
  background-repeat: no-repeat;
}

.grid-submenu-movil::before {
  content: url("{{ 'icon-arrow.svg' | asset_url }}");
}

.close-bg {
  background-image: url("{{ 'icon-close.svg' | asset_url }}");
  background-position: 50% 50%;
} 

.btn-slider-left-categories::before {
  content: url("{{ 'icon-arrow-large.svg' | asset_url }}");
  transform: rotateZ(180deg);
}

.btn-slider-rigth-categories::before {
  content: url("{{ 'icon-arrow-large.svg' | asset_url }}");
}

.quantity-up::before, .btn-pack-plus::before  {
  content: url("{{ 'icon-plus-soru.svg' | asset_url }}");
}
.quantity-down::before, .btn-pack-meno::before {
  content: url("{{ 'icon-minus-soru.svg' | asset_url }}");
}

.video-icon::before {
  content: url("{{ 'icon-video.svg' | asset_url }}");
}

.arrow-background::after {
  content: url("{{ 'icon-arrow.svg' | asset_url }}");
}

.rad-text {
  color: {{ settings.color_variant_product }};
  font-size: {{ settings.size_variant_product }}px;
}

{% comment %} ------ CARDS PRODUCTS THEME ------- {% endcomment %}
.bg_card {
  background-color: {{ settings.bg_card }};
  font-family: {{ settings.type_card_font.family }}, Arial, sans-serif;
}

.name_product {
  color: {{ settings.color_name_product }};
  font-size: {{ settings.size_name_product }}px;
}

.description_product {
  color: {{ settings.color_description_product }};
  font-size: {{ settings.size_description_product }}px;
}

.price_product {
  color: {{ settings.color_price_product }};
  font-size: {{ settings.size_price_product }}px;
}

.price_compare {
  color: {{ settings.color_discount_product }};
  font-size: {{ settings.size_discount_product }}px;
}

.tag-objective {
  font-weight: 600;
  text-transform: uppercase;
  font-size: {{ settings.size_tag_card }}px;
}

.btn-add-card {
  font-size: {{ settings.size_btn_product_movil }}px;
}

.btn-card-main {
  font-family: {{ settings.type_button_font.family }}, Arial, sans-serif;
  background-color: {{ settings.bg_btn_product_add }};
  color: {{ settings.color_btn_product_add }};
  font-size: {{ settings.size_btn_product }}px;
  cursor: pointer;
}

.btn-card-main[disabled="disabled"] {
  background-color: {{ settings.bg_btn_product_out }};
  color: {{ settings.color_btn_product_out }};
  cursor: not-allowed;
}

.btn-choices-card {
  font-family: {{ settings.type_button_font.family }}, Arial, sans-serif;
  background-color: {{ settings.bg_btn_product_add }};
  color: {{ settings.color_btn_product_add }};
  font-size: {{ settings.size_btn_product }}px;
