{% comment %}
  ly_global_begin
{% endcomment %}
{% capture ly-global-content %}
  {% render 'ly-global' render:true %}
{% endcapture %}
{% assign ly-global-content = ly-global-content | split: '#ly#' %}
{% assign langify_title = ly-global-content[0] %}
{% assign langify_description = ly-global-content[1] %}
{% assign langify_shop_name = ly-global-content[2] %}
{% assign langify_shop_description = ly-global-content[3] %}
{% assign canonical_langify_url = ly-global-content[4] %}
{% assign langify_shop_url = ly-global-content[5] %}
{% assign langify_shop_domain = ly-global-content[6] %}
{% comment %}
  ly_global_end
{% endcomment %}
<div class="flex-titles-head">
  <div class="title-subtitle_contianer">
    {% if title != blank %}
      <h2 class="bold-font style_title_section_{{ section.id }}">{{ title }}</h2>
    {% endif %}
    {% if subtitle != blank %}
      <span class="break-titles">|</span>
      <span class="style_subtitle_section_{{ section.id }}">{{ subtitle }}</span>
    {% endif %}
  </div>
  {% if link != blank %}
    <a href="{{ link.url }}" class="style_btn_section_{{ section.id }} btn_collection_link">{{ text_link }}</a>
  {% endif %}
</div>