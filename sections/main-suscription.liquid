{% comment %}
  ly_global_begin
{% endcomment %}
{% capture ly-global-content %}
  {% render 'ly-global' render:true %}
{% endcapture %}
{% assign ly-global-content = ly-global-content | split: '#ly#' %}
{% assign langify_title = ly-global-content[0] %}
{% assign langify_description = ly-global-content[1] %}
{% assign langify_shop_name = ly-global-content[2] %}
{% assign langify_shop_description = ly-global-content[3] %}
{% assign canonical_langify_url = ly-global-content[4] %}
{% assign langify_shop_url = ly-global-content[5] %}
{% assign langify_shop_domain = ly-global-content[6] %}
{% comment %}
  ly_global_end
{% endcomment %}
<div class="relative-position">
  {% capture background_image %}{{ section.settings.background_image | img_url: 'master' }}{% endcapture %}
  {% render 'img-upload'
    class: 'image-hero-suscription',
    img_id: 'main-id-hero',
    img_url: background_image,
    alt: alt
  %}

  <div class="width-soru relative-position hero-text-suscription">
    <h1 class="title-hero-suscription">{{ section.settings.title_hero | replace: ',', ',</br>' }}</h1>
    <p class="subtitle-hero-suscription">{{ section.settings.subtitle_hero }}</p>
  </div>

</div>

{% schema %}
  {
    "name": "Main suscriptions",
    "class": "section-hero-suscription",
    "settings": [
      {
        "type": "text",
        "id": "title_hero",
        "label": "Title in section",
        "default": "Simplifiez vous la vie, abonnez-vous !"
      },
      {
        "type": "text",
        "id": "subtitle_hero",
        "label": "Subtitle in section",
        "default": "Économisez jusqu'à 20%."
      },
      {
        "type": "image_picker",
        "id": "background_image",
        "label": "Background image in section"
      }
    ]
  }
{% endschema %}